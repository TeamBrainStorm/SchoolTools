<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MidActivity"
    android:background="#FFe5e5e5" >

    <LinearLayout
        android:id="@+id/layoutAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:maxLines="10"
            android:paddingBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Parameter and Area\nof Square"
            android:textColor="#FF777777"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <Button
        android:id="@+id/mathbttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="sqr"
        android:background="#FFffffff"
        android:textColor="#FF777777"
        android:text="@string/get_sqr" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutAction"
        android:layout_centerHorizontal="true"
        android:background="#FFA365AE"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:textColor="#FFffffff"
        android:gravity="center"
        android:text="@string/length"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/editTextL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/card_white"
        android:ems="10"
        android:imeOptions="actionGo"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:text="enter value"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" >
 <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textCireRes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mathbttn"
        android:layout_below="@+id/editTextL"
        android:paddingTop="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="true" />

</RelativeLayout>
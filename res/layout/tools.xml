<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFe5e5e5"
    
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tools" >

    <Button
        android:id="@+id/Factor"
        android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/lb_factor"
        android:text="Factor Calculator"
        android:paddingLeft="20dp"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Area"
        android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_below="@+id/Factor"
        
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lb_area"
        android:text="Area"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText"  />

    <Button
        android:id="@+id/Fcal"
        android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_below="@+id/Area"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lb_fraction"
        android:text="Fraction Calculator"
        android:paddingLeft="24dp"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/linear"
        android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_below="@+id/Fcal"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lb_eq"
        android:paddingLeft="20dp"
        android:text="Linear Equations"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/graph"
       android:layout_width="320dp"
        android:layout_height="78dp"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lb_graph"
        android:text="Graphing Calculator"
        android:paddingLeft="24dp"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

</RelativeLayout>
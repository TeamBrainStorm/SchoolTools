<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFe5e5e5"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tools" >

    <Button
        android:id="@+id/Factor"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/lb_factor"
        android:paddingLeft="20dp"
        android:layout_marginLeft="28dp"
        android:text="Factor\nCalculator"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/Area"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/lb_area"
        android:text="Area"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" 
        android:layout_marginRight="28dp"
        />

    <Button
        android:id="@+id/Fcal"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Factor"
        android:background="@drawable/lb_fraction"
        android:paddingLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="28dp"
        android:text="Fraction\nCalculator"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/linear"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Area"
        android:background="@drawable/lb_eq"
        android:paddingLeft="20dp"
        android:text="Linear\nEquations"
        
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText"
        android:layout_marginRight="28dp" />

    <Button
        android:id="@+id/graph"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Fcal"
        android:background="@drawable/lb_graph"
        android:paddingLeft="24dp"
        android:text="Graphing\nCalculator"
        android:layout_marginLeft="28dp"
        android:textColor="#FF777777"
        tools:ignore="HardcodedText" />

</RelativeLayout>
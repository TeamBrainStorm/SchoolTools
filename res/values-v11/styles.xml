<resources>
    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>
<style name="AppTheme.Blue.Dark" parent="AppBaseTheme">

        <item name="attr/homeIcon">@drawable/btn_blue</item>
    </style>

    <style name="AppTheme.Blue.Light" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_blue_light</item>
        <item name="attr/homeIcon">@drawable/btn_blue</item>
    </style>

    <style name="AppTheme.Green.Dark" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_green_dark</item>
        <item name="attr/homeIcon">@drawable/btn_green</item>
    </style>

    <style name="AppTheme.Green.Light" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_green_light</item>
        <item name="attr/homeIcon">@drawable/btn_green</item>
    </style>

    <style name="AppTheme.Red.Dark" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_red_dark</item>
        <item name="attr/homeIcon">@drawable/btn_red</item>
    </style>

    <style name="AppTheme.Red.Light" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_red_light</item>
        <item name="attr/homeIcon">@drawable/btn_red</item>
    </style>

    <style name="AppTheme.Orange.Dark" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_orange_dark</item>
        <item name="attr/homeIcon">@drawable/btn_orange</item>
    </style>

    <style name="AppTheme.Orange.Light" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_orange_light</item>
        <item name="attr/homeIcon">@drawable/btn_orange</item>
    </style>

    <style name="AppTheme.Purple" parent="AppBaseTheme">
        <item name="titleColor">@color/holo_purple</item>
        <item name="attr/homeIcon">@drawable/btn_purple</item>
    </style>
      <style name="ButtonBarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.Black" parent="@android:style/Theme.Holo">
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="buttonBarDividerStyle">@style/ButtonBarDivider</item>
    </style>

    <style name="Theme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="buttonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="buttonBarDividerStyle">@style/ButtonBarDivider</item>
    </style>
    
</resources>